<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".IndiaStatisticsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Covid 19 "
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Imquestion"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_coronavirus"></ImageView>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:text="INDIA COVID-19 TRACKER"
                android:textColor="#353b41"
                android:textSize="18sp"></TextView>

            <TextView
                android:id="@+id/tvtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:text="INDIA COVID-19 TRACKER"
                android:textColor="#29A746"
                android:textSize="14sp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/_12sdp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="CONFIRMED"
                        android:textColor="#FF88A1"
                        android:textSize="14sp"></TextView>

                    <TextView
                        android:id="@+id/tvconfirmedcase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#FF083B"
                        android:textSize="20sp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/tvconfirmedcaseincr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#FF083B"
                        android:textSize="13sp"></TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="ACTIVE"
                        android:textColor="#67B0ff"
                        android:textSize="14sp"></TextView>

                    <TextView
                        android:id="@+id/tvactivecase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#017CFF"
                        android:textSize="20sp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/tvactivecaseincr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#017CFF"
                        android:textSize="13sp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="RECOVERED"
                        android:textColor="#7FCA8F"
                        android:textSize="14sp"></TextView>

                    <TextView
                        android:id="@+id/tvrecoveredcase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#2BA847"
                        android:textSize="20sp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/tvrecoveredcaseincr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#2BA847"
                        android:textSize="13sp"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="DECEASED"
                        android:textColor="#AAAFB3"
                        android:textSize="14sp"></TextView>

                    <TextView
                        android:id="@+id/tvdeathcase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#6E777F"
                        android:textSize="20sp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/tvdeathcaseincr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#6E777F"
                        android:textSize="13sp"></TextView>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="#E3E2F3"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:paddingLeft="@dimen/_4sdp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total Sample Tested :"
                    android:textSize="18sp"></TextView>

                <TextView
                    android:id="@+id/tvtotalsample"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text=""
                    android:textSize="20sp"></TextView>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:background="#ECEDEE"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="#212121"
                    android:text="STATE"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"></TextView>

                <View
                    android:layout_width="@dimen/_2sdp"
                    android:layout_height="match_parent"
                ></View>

                <TextView
                    android:background="#ECEDEE"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="#FF083B"
                    android:text="CNFMD"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"></TextView>

                <View
                    android:layout_width="@dimen/_2sdp"
                    android:layout_height="match_parent"
                    ></View>
                <TextView
                    android:background="#ECEDEE"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="#017CFF"
                    android:text="ACTV"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"></TextView>

                <View
                    android:layout_width="@dimen/_2sdp"
                    android:layout_height="match_parent"
                    ></View>

                <TextView
                    android:background="#ECEDEE"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="#2BA847"
                    android:text="RCVRD"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"></TextView>

                <View
                    android:layout_width="@dimen/_2sdp"
                    android:layout_height="match_parent"
                    ></View>

                <TextView
                    android:background="#ECEDEE"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="#6E777F"
                    android:text="DCSD"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"></TextView>




            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvstate"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>